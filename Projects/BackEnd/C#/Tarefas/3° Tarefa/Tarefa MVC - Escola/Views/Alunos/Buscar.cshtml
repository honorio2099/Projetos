@model IEnumerable<DicasTarefa.Models.Alunos>

@{
    ViewBag.Title = "Buscar";
}

<h2>Buscar</h2>


@foreach (var item in Model)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <p class="panel-title">@item.NomeAluno</p>
        </div>
        <div class="panel-body">
            <p>@item.NomePai</p>
            <p>@item.NomeMae</p>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Ler mais", "Detalhes", "Alunos", new { id = @item.IdAluno }, null)
        </div>
    </div>
}
