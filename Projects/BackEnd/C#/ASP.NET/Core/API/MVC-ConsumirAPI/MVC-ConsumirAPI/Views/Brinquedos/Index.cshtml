model IEnumerable<Brinquedo>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_brinquedosLayout.cshtml";
    }

    <a asp-action="AddBrinquedo" class="btn btn-sm btn-primary">Adicionar Brinquedo</a>
    <a asp-action="GetBrinquedo" class="btn btn-sm btn-secondary">Pesquisar Brinquedo</a>

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Fabricante</th>
                <th>Genero</th>
                <th>Estoque</th>
                <th>Atualiza</th>
                <th>Deleta</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brinq in Model)
            {
                <tr>
                    <td>@brinq.Id</td>
                    <td>@brinq.NomeBrinquedo</td>
                    <td>@brinq.Fabricante</td>
                    <td>@brinq.Genero</td>
                    <td>@brinq.Estoque</td>
                    <td>
                        <a asp-action="UpdateBrinquedo" asp-route-id="@brinq.Id">
                            <img src="/icon/edit.png" />
                        </a>
                    </td>
                    <td>
                        <form asp-action="DeleteBrinquedo" method="post">
                            <input type="hidden" value="@brinq.Id" name="Id" />
                            <input type="image" src="/icon/close.png" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>




