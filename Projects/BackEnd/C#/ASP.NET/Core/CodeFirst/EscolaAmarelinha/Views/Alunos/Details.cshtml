@model EscolaAmarelinha.Models.Aluno

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Aluno</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataMatriculaAluno)
        </dt>
        <dd class="col-sm-10">
            @Model.DataMatriculaAluno.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MensalidadeAluno)
        </dt>
        <dd class="col-sm-10">
            R$ @Model.MensalidadeAluno.ToString("#0.00")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeAluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeAluno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CursoAluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CursoAluno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneroAluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneroAluno)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Boletim)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr> <!-- <tr> é uma linha na tabela -->
                    <th>Disciplina</th> <!-- <th> é uma coluna na tabela -->
                    <th>Nota</th>
                </tr>
                @foreach (var item in Model.Boletim)
                {
                    <tr>
                        <th>@item.Disciplina.NomeDisciplina</th>
                        <th>@item.NotaDisciplina.ToString("#0.00")</th>
                    </tr>
                }
            </table>
        </dd>

    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
</div>
