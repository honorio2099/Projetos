@model MercadinhoNuvensFofas.Models.FormaEntrega

@{
    ViewData["Title"] = "Edit";
}

<h1>Alteração da Forma de Entrega</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdForma" />
            <div class="form-group">
                <label asp-for="DescForma" class="control-label"></label>
                <input asp-for="DescForma" class="form-control" />
                <span asp-validation-for="DescForma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcrescForma" class="control-label"></label> em %
                <input asp-for="AcrescForma" class="form-control" />
                <span asp-validation-for="AcrescForma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
