@model MercadinhoNuvensFofas.Models.Produto

@{
    ViewData["Title"] = "Edit";
}



<h4>Alteração de Produtos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProd" />
            <div class="form-group">
                <label asp-for="NomeProd" class="control-label"></label>
                <input asp-for="NomeProd" class="form-control" />
                <span asp-validation-for="NomeProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdDispProd" class="control-label"></label>
                <input asp-for="QtdDispProd" class="form-control" />
                <span asp-validation-for="QtdDispProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoProd" class="control-label"></label>
                <input asp-for="PrecoProd" class="form-control" />
                <span asp-validation-for="PrecoProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgProd" class="control-label"></label>
                <input type="hidden" asp-for="ImgProd" />
                <p>
                    <img src="@Model.ImgProd" asp-append-version="true" width="70" height="70" />
                    <input type="file" name="novaFoto" />
                </p>
                <span asp-validation-for="ImgProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
