@model EscolaAmarelinhas.Models.Boletim

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes da Notas - Boletim</h1>

<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.NomeAluno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciplina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disciplina.NomeDisciplina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotaDisciplina)
        </dt>
        <dd class="col-sm-10">
            @Model.NotaDisciplina.ToString("#0.0")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdBoletim">Editar</a> 
</div>
