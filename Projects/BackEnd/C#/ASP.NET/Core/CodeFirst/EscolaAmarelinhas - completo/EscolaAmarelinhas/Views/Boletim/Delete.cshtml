@model EscolaAmarelinhas.Models.Boletim

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusão de Notas - Boletim</h1>

<h3>Deseja realmente excluir esta Nota?</h3>
<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.NomeAluno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciplina)
        </dt>
        <dd class="col-sm-10">
            @Model.Disciplina.NomeDisciplina
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotaDisciplina)
        </dt>
        <dd class="col-sm-10">
            @Model.NotaDisciplina.ToString("#0.0")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdBoletim" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
    </form>
</div>
