@model EscolaAmarelinhas.Models.Disciplina

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusão de Disciplinas</h1>

<h3>Deseja realmente excluir esta disciplina?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeDisciplina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeDisciplina)
        </dd>
    </dl>
    
