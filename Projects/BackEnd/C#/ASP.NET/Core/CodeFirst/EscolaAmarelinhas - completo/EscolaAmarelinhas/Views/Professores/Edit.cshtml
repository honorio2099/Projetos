@model EscolaAmarelinhas.Models.Professor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Professor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProf" />
            <div class="form-group">
                <label asp-for="NomeProf" class="control-label"></label>
                <input asp-for="NomeProf" class="form-control" />
                <span asp-validation-for="NomeProf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdadeProf" class="control-label"></label>
                <input asp-for="IdadeProf" class="form-control" />
                <span asp-validation-for="IdadeProf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalarioProf" class="control-label"></label>
                <input asp-for="SalarioProf" class="form-control" />
                <span asp-validation-for="SalarioProf" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StatusProf" /> @Html.DisplayNameFor(model => model.StatusProf)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
